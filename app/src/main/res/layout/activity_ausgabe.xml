<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wedenik.fabian.schutzwegbeleuchtung.Ausgabe" android:background="@drawable/hintergrund_3d_v2">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/linearLayout">
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leuchtenmodelle" android:clickable="true"
                android:spinnerMode="dropdown" android:layout_marginTop="-5dp"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leuchte"
                android:spinnerMode="dropdown" android:clickable="true"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lichtpunktabstand"
            android:layout_alignParentLeft="false" android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_marginRight="120dp" android:layout_marginTop="75dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_text"
            android:id="@+id/textView"
            android:onClick="show_data_sheet" android:clickable="true"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_gravity="right"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;&lt;"
            android:id="@+id/return_button"
            style="@style/Base.Widget.AppCompat.Button" android:clickable="true"
            android:onClick="back_to_first_screen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/laenge"
            android:layout_alignParentRight="true" android:layout_marginRight="105dp"
            android:layout_alignParentTop="true" android:layout_marginTop="290dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breite" android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="65dp"
            android:layout_marginLeft="130dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lph_lpa" android:clickable="true"
            android:spinnerMode="dropdown" android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:layout_marginTop="220dp" android:layout_marginRight="-6dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ueberhang"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_marginBottom="130dp" android:layout_marginLeft="-6dp"/>

</RelativeLayout>
