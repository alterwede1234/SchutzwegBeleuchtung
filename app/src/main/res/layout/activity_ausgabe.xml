<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wedenik.fabian.schutzwegbeleuchtung.Ausgabe" android:background="@drawable/hintergrund_3d">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/laenge" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/land"
                android:layout_toStartOf="@+id/land" android:layout_marginTop="62dp"
                android:background="@color/highlighted_text_material_dark" android:text="Gewaehlte Laenge: "/>
        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/breite"
                    android:background="@color/highlighted_text_material_dark" android:text="Gewaehlte Breite: "
                    android:layout_below="@+id/laenge" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/land"
                    android:background="@color/highlighted_text_material_dark" android:text="Gewaehltes Land: "
                    android:layout_below="@+id/breite"
                    android:layout_alignRight="@+id/button3" android:layout_alignEnd="@+id/button3"/>
    </LinearLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:columnCount="4"
            android:orientation="vertical">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button3"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="0"
                android:layout_column="1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button2" android:layout_row="0"
                android:layout_column="2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button4" android:layout_row="0" android:layout_column="3"/>
    </GridLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neue Eingabe"
            android:id="@+id/return_button"
            android:layout_gravity="bottom"
            style="@style/Base.Widget.AppCompat.Button" android:clickable="true"
            android:onClick="back_to_first_screen"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_text"
            android:id="@+id/textView" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:onClick="show_data_sheet" android:clickable="true"
            style="@style/Base.Widget.AppCompat.ActionButton"/>

</RelativeLayout>
