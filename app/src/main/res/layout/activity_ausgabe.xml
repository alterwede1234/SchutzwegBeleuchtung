<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wedenik.fabian.schutzwegbeleuchtung.Ausgabe" android:background="@drawable/hintergrund_3d">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/laenge" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/land"
                android:layout_toStartOf="@+id/land" android:layout_marginTop="62dp"
                android:background="@color/highlighted_text_material_dark" android:text="Gewaehlte Laenge: "/>
        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/breite"
                    android:background="@color/highlighted_text_material_dark" android:text="Gewaehlte Breite: "
                    android:layout_below="@+id/laenge" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/land"
                    android:background="@color/highlighted_text_material_dark" android:text="Gewaehltes Land: "
                    android:layout_below="@+id/breite"
                    android:layout_alignRight="@+id/button3" android:layout_alignEnd="@+id/button3"/>
    </LinearLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:columnCount="15"
            android:orientation="vertical">
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leuchtenmodelle" android:layout_row="0" android:layout_column="14" android:clickable="true"
                android:spinnerMode="dropdown"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leuchte" android:layout_row="1" android:layout_column="14"
                android:spinnerMode="dropdown" android:clickable="true"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lph_lpa" android:layout_row="2" android:layout_column="14" android:clickable="true"
                android:spinnerMode="dropdown"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lichtpunktabstand" android:layout_row="3" android:layout_column="1"/>
    </GridLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neue Eingabe"
            android:id="@+id/return_button"
            android:layout_gravity="bottom"
            style="@style/Base.Widget.AppCompat.Button" android:clickable="true"
            android:onClick="back_to_first_screen"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_text"
            android:id="@+id/textView" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:onClick="show_data_sheet" android:clickable="true"
            style="@style/Base.Widget.AppCompat.ActionButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lichtpunkthoehe" android:layout_above="@+id/textView" android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" android:layout_marginRight="63dp" android:layout_marginEnd="63dp"
            android:layout_marginBottom="135dp"/>

</RelativeLayout>
